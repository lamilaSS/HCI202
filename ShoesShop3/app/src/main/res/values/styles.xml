<resources>

    <!-- Base application theme. -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#808080</item>
        <item name="colorControlActivated">#FFEB3B</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorPrimary">@color/appbar</item>

        <item name="actionMenuTextColor">@color/appbartextcolor</item>
        <item name="colorPrimaryDark">@color/text</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/appbartextcolor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay2" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.PopupOverlay2" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
        <item name="android:actionBarSize">30dp</item>
        <item name="actionBarSize">30dp</item>
    </style>
    <style name="AndroidImageSlider_Oval_Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="shape">rect</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>
        <item name="tabIndicatorColor">#000000</item>
        <item name="selected_color">#000000</item>
        <item name="unselected_color">#000000</item>
        <item name="selected_width">8dp</item>
        <item name="selected_height">8dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/appbartextcolor</item>
    </style>
</resources>
