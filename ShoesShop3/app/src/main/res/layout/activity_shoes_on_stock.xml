<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.ShoesOnStock">
    <ImageView

        android:layout_width="100dp"
        android:layout_height="128dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:src="@drawable/shoe1">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cond1"
            android:layout_width="match_parent"
            android:layout_height="42dp"

            android:layout_marginTop="10dp"
            android:text="Hyberdunk(New with box)"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/size1"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:text="Size: 38.5"
            android:textColor="@color/colorTex"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/price1"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:text="Price : 178$"
            android:textColor="@color/colorTex"
            android:textSize="20dp"></TextView>
    </LinearLayout>
<TextView
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:textAlignment="center"
    android:alpha="0.8"
    android:textSize="30dp"
    android:text="Finding buyer...."
    android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="Edit your shoes"
        android:onClick="onClickView"
        android:backgroundTint="#5DADE2"
        android:layout_height="wrap_content"/>
</LinearLayout>