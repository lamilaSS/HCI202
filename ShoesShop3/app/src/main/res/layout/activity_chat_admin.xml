<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.ListProductChat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:text="All"
            android:onClick="onClick"
            android:textAlignment="center" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:id="@+id/admin"
            android:text="Admin"
            android:onClick="onClick"
            android:textAlignment="center" />

        <TextView
            android:layout_width="82dp"

            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:id="@+id/buying"
            android:text="Buying"
            android:onClick="onClick"
            android:textAlignment="center" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:id="@+id/selling"
            android:text="Selling"
            android:onClick="onClick"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/down2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:onClick="onClickItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/all"
                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:src="@drawable/shoe1">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cond1"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="New with box"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/size1"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:text="178$ - By Admin"

                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="From admin: i can give you 50% discount"
                        android:textSize="14dp"></TextView>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>