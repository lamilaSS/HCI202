<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".ViewProductActivity"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_main">

    </include>






    <ScrollView
        android:layout_marginTop="55dp"
        android:layout_marginBottom="49dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">









            <com.example.wolfsoft.get_detail.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                custom:pager_animation_span="1100"
                android:layout_height="300dp"
                style="@style/AndroidImageSlider_Oval_Black"
                android:background="#fff"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >


                <!--*********Iphone price**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/iphone6s"
                        android:layout_width="152dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ABC Shoes"
                        android:textColor="@color/colorTex"
                        android:textSize="21dp"
                        android:visibility="visible" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="start with"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorTex"
                        android:textSize="16dp"
                        android:visibility="visible"
                        android:gravity="end" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="750 $"
                        android:textSize="21dp"
                        android:textColor="@color/textred"
                        android:textAlignment="center"
                        />
                </LinearLayout>


                <!--*********Shipping**********-->

                <LinearLayout

                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView

                        android:id="@+id/free"
                        android:layout_width="110dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rect"
                        android:text="Free Shipping"
                        android:textColor="#fff"
                        android:gravity="center"

                        />

                    <LinearLayout

                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/est"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Est. delivery"
                            android:textSize="13dp"
                            android:textColor="@color/colorSub"
                            />

                        <TextView
                            android:layout_weight="0.8"
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feb 17-20"
                            android:textSize="13dp"
                            android:textColor="@color/colorTex"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />

                <!--*********Iphone price**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/condition1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/condition2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New with box"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                <!--*********Brand**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/brand1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/brand2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Adidas"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                *********size**********

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/size1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Release Date"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/size2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="10/8/2019"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>


                <!--*********weight**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/weight1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Retail Price"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/weight2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="140$"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                <!--*********show more**********-->

                <LinearLayout
                    android:id="@+id/linear1"
                    android:gravity="center"

                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/show5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOW MORE"
                        android:textColor="#54abee"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/arrow"
                        android:drawablePadding="8dp"
                        />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linear2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--*********weight**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/display1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/display2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Limited"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>


                    <!--*********camera**********-->




                    <!--*********video**********-->



                    <!--*********Sim**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/sim1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Size: "
                            android:textColor="@color/colorSub"

                            />

                        <Button
                            android:id="@+id/sizeChoose"
                            android:layout_width="166dp"
                            android:layout_height="50dp"
                            android:backgroundTint="#54abee"
                            android:text="size"
                            android:textSize="14dp" />
                    </LinearLayout>




                    <!--*********show less**********-->

                    <LinearLayout
                        android:id="@+id/showless"
                        android:gravity="center"

                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView

                            android:id="@+id/show2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHOW LESS"
                            android:textColor="#4c71f5"
                            android:textSize="11dp"
                            android:gravity="center"
                            android:drawableRight="@drawable/arrow1"
                            android:drawablePadding="8dp"

                            />

                    </LinearLayout>


                </LinearLayout>



                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <!--*********discription**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/disc1"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item discription"
                        android:textColor="@color/colorSub"
                        android:drawableRight="@drawable/arrow2"

                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <!--*********Est. delivery**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/estdelivery1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Est. delivery"
                        android:textColor="@color/colorSub"
                        />

                    <TextView
                        android:id="@+id/estdelivery2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tue, Feb 17 - Fri, Feb 18"
                        android:textColor="@color/colorTex"
                        android:drawableRight="@drawable/arrow2"

                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />




                <!--*********Returns**********-->



                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />




                <!--*********Guarantee**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/guarantee1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Returns"
                        android:textColor="@color/colorSub"
                        />

                    <TextView
                        android:id="@+id/guarantee2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No return"
                        android:textColor="@color/colorTex"
                        android:drawableRight="@drawable/arrow2"

                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:onClick="EditActivity"
                        android:layout_marginTop="20dp"


                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon1"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/addtocart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Add to cart"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#808080"
                            />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"

                        />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:onClick="onClickLike"
                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:id="@+id/like"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_thumb_up_black_24dp"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />

                        <TextView
                            android:id="@+id/Love"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="Love this"
                            android:textColor="#808080"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"


                        />




                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:onClick="SellLikeThis"
                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon3"
                            android:layout_gravity="center"
                            android:gravity="bottom"

                            />



                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:id="@+id/sell"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sell one like this"
                            android:layout_gravity="center"
                            android:textSize="12dp"
                            android:textColor="#808080"
                            />
                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2f2f2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recently Sell"
                        android:padding="16dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorSub"
                        />



                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"/>

                    <LinearLayout
                        android:id="@+id/linear3"
                        android:gravity="center"

                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView

                            android:id="@+id/show3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHOW MORE"
                            android:textColor="#54abee"
                            android:onClick="EditActivity"
                            android:textSize="11dp"
                            android:gravity="center"
                            android:drawableRight="@drawable/arrow"
                            android:drawablePadding="8dp"
                            />


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPONSERED LINKS"
                        android:padding="16dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorSub"

                        />


                    <GridView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:verticalSpacing="1dp"
                        android:stretchMode="columnWidth"
                        android:numColumns="2"
                        android:isScrollContainer="false"
                        android:horizontalSpacing="1dp"
                        android:id="@+id/gridview"
                        android:background="#808080"
                        />

                </LinearLayout>












            </LinearLayout>
        </LinearLayout>

    </ScrollView>



    <!--<ListView-->
    <!--android:id="@+id/listview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--/>-->


    <!--****buy****-->

    <TextView

        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:text="FIND SELLERS"

        android:textSize="16dp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>




