<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MyStore">
    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"

                android:src="@drawable/ic_passed"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="pass"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"

                android:src="@drawable/ic_failed"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="fail"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"

                android:src="@drawable/ic_pending"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="pending"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <ImageView

            android:layout_width="100dp"
            android:layout_height="128dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:src="@drawable/shoe1">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Nike Hyperdunk"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/con1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:text="Second-hand"

                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/price1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="You receipt: 120$"
                android:textSize="20dp"></TextView>

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="-104dp"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/ic_failed" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <ImageView

            android:layout_width="100dp"
            android:layout_height="128dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:src="@drawable/shoes2">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newname"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ABC Shoes"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/con3"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:text="New with box"

                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/price2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"

                android:text="You receipt: 165$"
                android:textSize="20dp"></TextView>

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="-100dp"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/ic_passed" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClickView"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="100dp"
            android:layout_height="128dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:src="@drawable/item1">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newname12"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Some shoes"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/con5"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-7dp"

                android:text="New with box"
                android:textSize="20dp"></TextView>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="-45dp"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/ic_pending" />

            <TextView
                android:id="@+id/price5"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:layout_marginBottom="20dp"
                android:text="You receipt: 165$"
                android:textSize="20dp"></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClickView"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="100dp"
            android:layout_height="128dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:src="@drawable/item1">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Some shoes"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/con7"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-7dp"

                android:text="New with box"
                android:textSize="20dp"></TextView>

            <ImageView

                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="-45dp"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/ic_processing" />

            <TextView
                android:id="@+id/price7"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:layout_marginBottom="20dp"
                android:text="You receipt: 165$"
                android:textSize="20dp"></TextView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    </ScrollView>

</LinearLayout>