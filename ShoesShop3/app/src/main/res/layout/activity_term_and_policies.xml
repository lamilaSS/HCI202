<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.TermAndPolicies"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
        <TextView
            android:layout_width="match_parent"

            android:layout_height="30dp"

            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Our policies"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every uploaded shoes had already been added 15% fee."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"

            android:layout_height="30dp"

            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Term of uses"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="1. Introduction"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="2. Accepting this License Agreement"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="3. License from Google"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="4. Use of the SDK by You"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="5. Your Developer Credentials"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="6. Privacy and Information"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"


            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="7. Third Party Applications"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="#54abee"
        app:srcCompat="@android:drawable/ic_dialog_email">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</LinearLayout>