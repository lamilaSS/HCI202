<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.ViewBillDetailPending2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView

                android:layout_width="100dp"
                android:layout_height="128dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:src="@drawable/shoe1">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cond1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"

                    android:layout_marginTop="10dp"
                    android:text="Hyberdunk(New with box)"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/size1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:text="Size: 38.5"
                    android:textColor="@color/colorTex"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/price1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Price : 178$"
                    android:textColor="@color/colorTex"
                    android:textSize="20dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:background="@drawable/ic_bill"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text=" : AB5467678H"
                        android:textColor="@color/colorTex"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:text="Buyer information"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Username : phu123"
                    android:textColor="@color/colorTex"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"/>



                <TextView

                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Date : 2019/9/9"
                    android:textColor="@color/colorTex"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Status:"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Pending"
                        android:textColor="#fecb2f"
                        android:textSize="20dp" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#5DADE2"
                    android:onClick="finishSee"
                    android:text="finish" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    app:backgroundTint="#54abee"
                    app:srcCompat="@android:drawable/ic_dialog_email" >

                </com.google.android.material.floatingactionbutton.FloatingActionButton>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>