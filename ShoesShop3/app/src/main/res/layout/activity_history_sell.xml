<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.HistorySell">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:background="@drawable/ba"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all"
                android:onClick="historyAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:text="All"
                android:textColor="@color/colorTex"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:background="@drawable/ba"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/buy"
                android:onClick="historyBuy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center"
                android:text="Buy"
                android:textColor="@color/colorTex"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:background="@drawable/ba"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center"
                android:text="Sell"
                android:textColor="@color/colorTex"
                android:textSize="17dp" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="15dp"

                android:layout_weight="1"
                android:src="@drawable/down2" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:onClick="viewBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:src="@drawable/shoes2">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cond2"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Nike Z(Second-hand)"
                        android:textSize="18dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/size2"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Size: 41"
                            android:textSize="20dp"></TextView>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_cash_in"
                            android:layout_marginLeft="70dp"></ImageView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"

                        android:text="165$"
                        android:textSize="20dp"></TextView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:onClick="viewBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:src="@drawable/shoes1">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cond3"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Ultra(Second-hand)"
                        android:textSize="18dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/size3"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Size: 46"
                            android:textSize="20dp"></TextView>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_cash_in"
                            android:layout_marginLeft="70dp"></ImageView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/price10"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"

                        android:text="145$"
                        android:textSize="20dp"></TextView>
                </LinearLayout>


            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="#54abee"
                app:srcCompat="@android:drawable/ic_dialog_email" >

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

        </LinearLayout>
    </ScrollView>

</LinearLayout>