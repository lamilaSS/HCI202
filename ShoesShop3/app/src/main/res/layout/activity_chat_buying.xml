<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.ListProductChat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:text="All"
            android:id="@+id/all"
            android:onClick="onClick"
            android:textAlignment="center" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:id="@+id/admin"
            android:text="Admin"
            android:onClick="onClick"
            android:textAlignment="center" />

        <TextView
            android:layout_width="82dp"

            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:text="Buying"
            android:onClick="onClick"
            android:textAlignment="center" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:background="@drawable/ba"
            android:id="@+id/selling"
            android:text="Seller"
            android:onClick="onClick"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/down2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:onClick="onClickItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:orientation="horizontal">

                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:src="@drawable/shoes2">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cond2"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Second-hand"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/size2"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:text="165$ - By Someone"

                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"

                        android:text="From me: Is this shoes new?"
                        android:textSize="14dp"></TextView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="onClickItem"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:src="@drawable/shoe2">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cond4"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Second-hand"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/size4"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:text="122$ - By IS"

                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"

                        android:text="From IS: it is ship free "
                        android:textSize="14dp"></TextView>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>